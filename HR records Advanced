using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
namespace first_project
{
    class Program
    {
        static void Main(string[] args)
        {
            Dictionary<string, string> hrRecords = new Dictionary<string, string>();
            bool isWorking = true;

            while (isWorking)
            {
                Console.WriteLine("Выберите номер задачи:");
                Console.WriteLine("1) добавить досье");
                Console.WriteLine("2) вывести все досье ");
                Console.WriteLine("3) удалить досье ");
                Console.WriteLine("4) выход");

                string choice = Console.ReadLine();

                switch (choice)
                {
                    case "1":
                        Add(ref hrRecords);
                        return;
                    case "2":
                        ShowAll(hrRecords);
                        return;
                    case "3":
                        Delete(ref hrRecords);
                        return;
                    case "4":
                        isWorking = false;
                        return;
                    default:
                        Console.WriteLine("Введите существующие пункты задач");
                        return;
                }
            }
        }

        static void Delete(ref Dictionary<string, string> dictionary)
        {
            Console.WriteLine("Введите ФИО сотрудника, которого вы хотите удалить");

            string name = Console.ReadLine();

            dictionary.Remove(name);
        }

        static void ShowAll(Dictionary<string, string> dictionary)
        {
            foreach(var item in dictionary)
            {
                Console.WriteLine($"{item.Key} - {item.Value}");
            }
        }

        static void Add(ref Dictionary<string, string> dictionary)
        {
            Console.WriteLine("Введите ФИО");

            string name = Console.ReadLine();

            Console.WriteLine("Введите должность");

            string position = Console.ReadLine();

            dictionary.Add(name, position);
        }

        
    }
}

using System;
namespace first_project
{
    class Program
    {
        static void Main(string[] args)
        {
            string text;
            int numOfRepeat;
            Console.WriteLine("Добрый день! Вас приветствует программа ЭХО");
            Console.Write("Что вы хотите сказать?");
            text = Console.ReadLine();
            Console.Write("Сколько раз вы хотите повторить ваше сообщение?");
            numberOfRepeat = Convert.ToInt32(Console.ReadLine());
            for (int i = 0; i < numOfRepeat; i++)
            {
                Console.WriteLine(text);
            }   
        }
    }
}

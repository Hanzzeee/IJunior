using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
namespace first_project
{
    class Program
    {
        static void Main(string[] args)
        {
            string[] nameSurnames = new string[0];
            string[] positions = new string[0];
            string choice;
            bool isWorking = true;

            Console.WriteLine("Добро пожаловать в кадровый реестр");

            while (isWorking)
            {
                Console.WriteLine("Выбирите пункт меню");
                Console.WriteLine("1) добавить досье");
                Console.WriteLine("2) вывести все досье");
                Console.WriteLine("3) удалить досье");
                Console.WriteLine("4) поиск по фамилии");
                Console.WriteLine("5) выход");
                choice = Console.ReadLine();

                switch (choice)
                {
                    case "1":
                        string nameSurname;
                        string position;

                        Console.WriteLine("Напишите ФИО");
                        nameSurname = Console.ReadLine();
                        Console.WriteLine("Напишите должность");
                        position = Console.ReadLine();
                        addPerson(nameSurname, position, ref nameSurnames, ref positions);
                        break;
                    case "2":
                        writeAll(nameSurnames, positions);
                        break;
                    case "3":
                        int number;
                        string lastcheck;

                        Console.WriteLine("Напишите номер досье, который вы хотите удалить");
                        number = Convert.ToInt32(Console.ReadLine());
                        Console.WriteLine("Вы уверены? (да/нет)");
                        lastcheck = Console.ReadLine();

                        if (lastcheck == "да")
                        {
                            deletePerson(number,ref nameSurnames, ref positions);
                        }
                        break;
                    case "4":
                        string surname;

                        Console.WriteLine("Напишите фамилию человека, которого вы хотите найти");
                        surname = Console.ReadLine();
                        findPerson(surname, nameSurnames, positions);
                        break;
                    case "5":
                        isWorking = false;
                        Console.WriteLine("До скорого использования нашего приложения");
                        break;
                }
            }

        }

        static void addPerson(string point1, string point2, ref string[] points1, ref string[] points2)
        {
            string[] tempPoints1 = new string[points1.Length + 1];
            string[] tempPoints2 = new string[points2.Length + 1];
            
            for (int i = 0; i < points1.Length; i++)
            {
                tempPoints1[i] = points1[i];
            }
            
            for (int i = 0; i < points2.Length; i++)
            {
                tempPoints2[i] = points2[i];
            }
            
            tempPoints1[tempPoints1.Length - 1] = point1;
            tempPoints2[tempPoints2.Length - 1] = point2;
            points1 = tempPoints1;
            points2 = tempPoints2;
        }

        static void writeAll(string[] points1, string[] points2)
        {
            for (int i=0; i < points1.Length; i++)
            {
                Console.WriteLine($"{i + 1}) {points1[i]} - {points2[i]}");
            }
        }

        static void deletePerson(int deleteElement, ref string[] points1, ref string[] points2)
        {
            string[] tempPoints1 = new string[points1.Length - 1];
            string[] tempPoints2 = new string[points2.Length - 1];
            
            for (int i = 0; i < points1.Length; i++)
            {
                if (i < deleteElement - 1)
                {
                    tempPoints1[i] = points1[i];
                }
                else if (i > deleteElement - 1)
                {
                    tempPoints1[i-1] = points1[i];
                }
            }
            
            for (int i = 0; i < points2.Length; i++)
            {
                if (i < deleteElement - 1)
                {
                    tempPoints2[i] = points2[i];
                }
                else if (i > deleteElement - 1)
                {
                    tempPoints2[i - 1] = points2[i];
                }
            }
            
            points1 = tempPoints1;
            points2 = tempPoints2;
        }

        static void findPerson(string point, string[] points1, string[] points2)
        {
            for (int i = 0; i < points1.Length; i++)
            {
                if (points1[i].Contains(point))
                {
                    Console.WriteLine($"{i + 1}) {points1[i]} - {points2[i]}");
                }
            } 
        }
    }
}
